{
	"name": "haspulse",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"test:run": "turbo test:run",
		"lint": "biome check .",
		"format": "biome format --write .",
		"db:generate": "pnpm --filter @haspulse/db db:generate",
		"db:migrate": "pnpm --filter @haspulse/db db:migrate",
		"db:push": "pnpm --filter @haspulse/db db:push"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"turbo": "2.3.3",
		"typescript": "5.7.2"
	},
	"packageManager": "pnpm@9.15.1",
	"engines": {
		"node": ">=20"
	}
}
