		"react-dom": "19.2.3",
		"sendpigeon": "^1.5.0",
		"stripe": "^20.1.0",
		"zod": "3.24.1"
	},
	"devDependencies": {
		"@types/node": "22.10.2",
		"@types/react": "^19",
		"@types/react-dom": "^19",
