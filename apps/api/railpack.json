{
	"$schema": "https://schema.railpack.com",
	"provider": "node",
	"packages": {
		"node": "20"
	},
	"steps": {
		"install": {
			"commands": ["corepack enable", "pnpm install --frozen-lockfile"]
		},
		"build": {
			"inputs": [{ "step": "install" }],
			"commands": ["pnpm turbo build --filter=@haspulse/api"]
		}
	},
	"deploy": {
		"startCommand": "node dist/index.js",
		"inputs": [
			{
				"step": "build",
				"include": ["."]
			}
		]
	}
}
